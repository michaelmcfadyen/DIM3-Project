<script type="text/javascript" src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<script type="text/javascript">
function apply_click(click_id) {

	var id_json = {'advertID': click_id};
	alert("id is " + click_id);
	$.ajax({
    	url: '/bfb_app/process',
    	type: "POST",
    	contentType: 'application/json; charset=utf-8',
    	data: JSON.stringify(id_json),
    	dataType: 'text', 
    	success: function(result) {
			alert("YO");
       	 	alert(result);
			document.getElementById(click_id).setAttribute("class","btn btn-primary disabled");
			document.getElementById(click_id).setAttribute("onclick", "#");
   	 	}
	});	
}
</script>
